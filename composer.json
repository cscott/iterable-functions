{
	"name": "wmde/euro",
	"description": "Value object for representing a positive amount of Euro",
	"homepage": "https://github.com/wmde/Euro",
	"license": "GPL-2.0+",
	"require": {
		"php": ">=7.1"
	},
	"require-dev": {
		"phpunit/phpunit": "~6.2",
		"squizlabs/php_codesniffer": "~2.9",
		"mediawiki/mediawiki-codesniffer": "~0.8.0",
		"ockcyp/covers-validator": "~0.6"
	},
	"autoload": {
		"files": [
			"src/functions.php"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev"
		}
	},
	"scripts": {
		"ci": [
			"@test",
			"@cs"
		],
		"test": [
			"composer validate --no-interaction",
			"vendor/bin/covers-validator",
			"vendor/bin/phpunit"
		],
		"cs": [
			"@phpcs"
		],
		"phpcs": [
			"vendor/bin/phpcs tests/ --standard=phpcs.xml --extensions=php -sp"
		]
	}
}
